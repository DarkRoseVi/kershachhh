<Application x:Class="ChefWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ChefWpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Mybutton" TargetType="Button" >
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Margin" Value="2"></Setter>
            <Setter Property="Background" Value="#FFF69419"></Setter>
        </Style>
        <Style x:Key="myTestBox" TargetType="TextBox">
            <Setter Property="Width" Value="100"></Setter>
            <Setter Property="Height" Value="20"></Setter>
        </Style>
        <Style x:Key="MyTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="Width" Value="120"></Setter>
        </Style>
        <Style x:Key="Tb" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFF69419"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Application.Resources>
</Application>
