<Page x:Class="WaiterWpf.Mypages.InfaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WaiterWpf.Mypages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InfaPage">

    <Grid>
        <StackPanel  x:Name="InfaSt">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Имя" Margin="5"/>
                <TextBlock x:Name="NameTb" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Фамилия" Margin="5"/>
                <TextBlock x:Name="lastnameTb" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Отчетсво" Margin="5"/>
                <TextBlock x:Name="PatromimecTb" Margin="5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Роль" Margin="5"/>
                <TextBlock x:Name="RoleTb" Margin="5"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
